# 🤖 Telegram Bot Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here  # Get from @BotFather
ADMIN_GROUP_ID=-1001234567890  # Admin group for notifications
PAYMENT_CHANNEL_ID=-1009876543210  # Channel for payment announcements

# 🔐 Security Settings
SECRET_KEY=your_secret_key_here  # Generate with: openssl rand -hex 32
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days in minutes

# 🗄️ Database Settings
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=v2ray_bot
SQLALCHEMY_DATABASE_URI=postgresql://postgres:your_db_password@localhost/v2ray_bot

# 🔄 Redis Settings (for Celery)
REDIS_URL=redis://localhost:6379/0

# 🌐 3x-ui Panel Settings
XUI_PANEL_URL=https://your-panel-url
XUI_USERNAME=admin
XUI_PASSWORD=your_panel_password

# 💳 Payment Settings
BANK_CARDS=["6037xxxxxxxxxxxx","6037xxxxxxxxxxxx"]  # List of bank card numbers
MIN_DEPOSIT_AMOUNT=50000  # Minimum wallet charge amount (Toman)
MIN_SELLER_DEPOSIT=500000  # Minimum deposit for sellers

# 🎁 Discount Settings
REFERRAL_BONUS_PERCENT=10  # Referral bonus percentage
VIP_DISCOUNT_PERCENT=15  # VIP user discount percentage

# 📊 Server Settings
MAX_USERS_PER_SERVER=1000  # Maximum users per server
SERVER_LOAD_THRESHOLD=80  # CPU/RAM threshold for load balancing

# 🔔 Notification Settings
NOTIFICATION_COOLDOWN=3600  # Seconds between notifications
EXPIRY_NOTIFICATION_DAYS=[7,3,1]  # Days before expiry to notify

# 🔒 Rate Limiting
RATE_LIMIT_REQUESTS=100  # Requests per window
RATE_LIMIT_WINDOW=3600  # Window size in seconds

# 🚫 Anti-Fraud Settings
MAX_FAILED_PAYMENTS=3  # Max failed payments before account review
PAYMENT_VERIFICATION_TIMEOUT=1800  # Seconds to verify payment

# 🌍 Localization
DEFAULT_LANGUAGE=fa  # Default language (Persian)
AVAILABLE_LANGUAGES=["fa","en"]  # Supported languages

# 📱 App Settings
PROJECT_NAME="V2Ray Management System"
API_V1_STR="/api/v1"
DEBUG=True  # Set to False in production

# 🔍 Monitoring
SENTRY_DSN=your_sentry_dsn  # Error tracking
PROMETHEUS_ENABLED=True  # Metrics collection
