# ğŸ Use Python 3.9 slim image
FROM python:3.9-slim

# ğŸ·ï¸ Labels
LABEL maintainer="Your Name <your.email@example.com>"
LABEL version="7.0"
LABEL description="V2Ray Account Management Telegram Bot"

# ğŸŒ Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# ğŸ“¦ Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“‚ Create and set working directory
WORKDIR /app

# ğŸ“‹ Copy requirements first for better caching
COPY requirements.txt .

# ğŸ“¥ Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# ğŸ“ Copy project files
COPY backend /app/backend

# ğŸ” Create directory for receipt images
RUN mkdir -p /app/receipts && chmod 755 /app/receipts

# ğŸ‘¤ Create non-root user
RUN useradd -m botuser && chown -R botuser:botuser /app
USER botuser

# ğŸš€ Command to run the bot
CMD ["python", "-m", "backend.app.bot.telegram_bot"]
